{
  "compilerOptions": {
    "alwaysStrict": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES6",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "paths": {

    },
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "core/**/*",
    "client/**/*",
    "server/**/*",
    "tools/**/*",
    "sandbox/**/*",
    "jest.config.ts",
    "tests/**/*",
    "node_modules/@types/jest/index.d.ts"
  ],
  "exclude": [
    "sandbox/_SandboxController.ts",
    "sandbox/include.ts",
    "sandbox/include2.ts"
  ]
}