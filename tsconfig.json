{
  "compilerOptions": {
    "alwaysStrict": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES6",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "paths": {

    }
  },
  "include": [
    "core/**/*",
    "client/**/*",
    "server/**/*",
    "sandbox/**/*",
    "jest.config.ts"
  ],
  "exclude": [
    "sandbox/_SandboxController.ts",
    "sandbox/include.ts",
    "sandbox/include2.ts",
    "tests/**/*"
  ]
}